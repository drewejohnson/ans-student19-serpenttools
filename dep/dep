include "../simple"

/* Power normalization */

set powdens 6  % Super low power density kW/g

/* Include additional libraries */
set declib "sss_endfb7.dec"
set nfylib "sss_endfb7.nfy"

/* Set time integration scheme */

set pcc leli

/* Use CRAM for depletion */

set bumode 2 16  % 16th order CRAM

/* Depletion schedule */

dep bustep 1 1
dep daystep 5 5 
dep decstep 10
dep daytot 100  % very long step, not advised

/* Which isotopes to track */
set inventory
Xe-135
burnupcredit  % contains many many isotopes

/* Create depletion matrix outputs */

set depmtx 2

% vim:ft=serp
